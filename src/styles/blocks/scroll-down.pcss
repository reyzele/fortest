.scroll-down {
  font-size: 18px;
  font-weight: 600;
  transition: 0.3s;

  &:after {
    content: '';
    position: relative;
    display: inline-block;
    vertical-align: middle;
    top: 0;
    background: svg-load(
        'scroll.svg',
        fill=$text-color,
        width=100%,
        height=100%
      )
      center center no-repeat;
    width: 28px;
    height: 30px;
    margin-left: 28px;
    transition: top 0.3s;
  }

  &:hover {
    &:after {
      top: 8px;
    }
  }
}
