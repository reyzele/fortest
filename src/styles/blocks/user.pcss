.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user__avatar {
  display: flex;
  margin: auto;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  overflow: hidden;
}

.user__desc {
  width: 100%;
  margin-top: 20%;

  table {
    width: 100%;
  }
}

.user__item {
  display: flex;
  justify-content: space-between;
}

.user__text {
  font-size: 16px;
  font-weight: 600;
  padding-bottom: 10px;
}
